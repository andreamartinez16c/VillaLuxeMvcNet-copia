@model List<Villa>

@{
    string UrlBucket = keysModel.BucketUrl;
}

    @if(Model != null)
    {
        <div class="containerReservas">
            @foreach (Villa villa in Model)
            {
                <div class="cardReservas">
                    <div class="headerReservas">
                        <div class="div_image_vReservas" style="background-image: url('@UrlBucket@villa.Imagenes') !important;">
                            <div class="imageReservas">
                                <i class="bi bi-heart-fill"></i>
                            </div>
                        </div>
                        <div class="contentReservas">
                            <span class="titleReservas">@villa.Nombre</span>
                            <hr />
                            <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"><i class="fa fa-map-marker-alt text-icons mr-2"></i> @villa.Ubicacion</small>
                                <small class="m-0"><i class="fa fa-bed text-icons mr-2"></i> @villa.NumHabitaciones Room</small>
                                <small class="m-0"><i class="fa fa-user text-icons mr-2"></i> @villa.Personas Person</small>
                            </div>
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex justify-content-start">
                                    <!-- <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>4.5 <small>(250)</small></h6> -->
                                    <h5 class="m-0">@villa.PrecioNoche €/noche</h5>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <a class="btn btn-danger" style="text-aling" asp-controller="Villas"
                                        asp-action="DeleteFavorito" asp-route-IdVilla="@villa.IdVilla">
                                        Eliminar Favorito
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div style="height:500px">
            <h1 class="h1" style="padding-top:20px; text-align:center">No hay villas favoritas!!</h1>
        </div>
    }